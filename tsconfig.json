{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "resolveJsonModule": true,
        "module": "node16",
        "sourceMap": true,
        "moduleDetection": "force",
        "lib": [
            "es2023"
        ],
        "strict": true,
        "verbatimModuleSyntax": true, // import type
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16",
        "outDir": "dist",
        "declaration": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_nodules"
    ]
}