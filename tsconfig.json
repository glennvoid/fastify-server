{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleDetection": "force",
        "lib": [
            "ES2022",
            "ESNext.AsyncIterable"
        ],
        // "verbatimModuleSyntax": true, // import type
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_nodules"
    ]
}